<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mashup">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MashupApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_thumb"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".app.noticedetail.NoticeDetailActivity"></activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.notices.NoticesActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".app.auth.LoginActivity" />
        <activity android:name=".app.attendees.AttendeesActivity" />
    </application>

</manifest>

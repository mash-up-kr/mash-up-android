<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/notice_list_padding_all"
    tools:context=".app.notice.NoticeActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/tvNoticeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/notice_margin_top_bottom_title"
        android:layout_marginBottom="@dimen/notice_margin_top_bottom_title"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:lineSpacingExtra="9sp"
        android:text="@string/title_public_notice"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNotice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNoticeTitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.widget.CompoundButton" />

        <import type="com.mashup.R" />

        <import type="com.mashup.model.VoteStatus" />

        <variable
            name="notice"
            type="com.mashup.model.Notice" />

        <variable
            name="viewmodel"
            type="com.mashup.app.notices.NoticesViewModel" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?selectableItemBackground"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_radius_main"
                android:backgroundTint="@color/colorYellow"
                android:paddingStart="12dp"
                android:paddingTop="4dp"
                android:paddingEnd="12dp"
                android:paddingBottom="4dp"
                android:text='@{notice.team.name ?? @string/app_name}'
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_normal"
                tools:text="MASH-UP" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="@{notice.title}"
                android:textColor="@color/text"
                android:textSize="@dimen/text_head"
                android:textStyle="bold"
                tools:text="MASH-UP" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:drawableStart="@drawable/icon_writer"
                android:gravity="center_vertical"
                android:text="@{notice.author.name}"
                android:textColor="@color/author"
                android:textSize="@dimen/text_normal"
                tools:text="MASH-UP" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/line" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="36dp"
                android:drawableStart="@drawable/icon_date"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:textColor="@color/text"
                android:textSize="@dimen/text_normal"
                app:noticeTime="@{notice.startAt}"
                tools:text="MASH-UP" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="36dp"
                android:drawableStart="@drawable/icon_clock"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:textColor="@color/text"
                android:textSize="@dimen/text_normal"
                app:duration="@{notice.duration}"
                app:startAt="@{notice.startAt}"
                tools:text="MASH-UP" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="36dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="36dp"
                android:drawableStart="@drawable/icon_place"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:text="@{notice.address1 + ` ` + notice.address2}"
                android:textColor="@color/text"
                android:textSize="@dimen/text_normal"
                tools:text="MASH-UP" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/line" />

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="24dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="5"
                android:text="@{notice.description}"
                android:textColor="@color/text"
                android:textSize="@dimen/text_small"
                tools:text="MASH-UP" />

            <TextView
                android:id="@+id/toggleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/notice_see_more"
                android:textSize="@dimen/text_small"
                android:visibility="gone"
                app:position="@{position}"
                app:seeMoreVisibility="@{descriptionText}"
                app:setPosition="@{viewmodel.setExpandPosition}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?selectableItemBackground"
                android:onClick="@{() -> viewmodel.onClickAttendeesButton(notice.attendanceSet)}"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/icon_vote"
                    android:drawableEnd="@drawable/icon_arrow"
                    android:drawablePadding="6dp"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:text="@{notice.attendanceSet.size() == notice.voteAttendanceCount + notice.voteAbsentCount ? @string/notice_attendance_set_complete : @string/notice_attendance_set_format(notice.attendanceSet.size() ,notice.voteAttendanceCount + notice.voteAbsentCount)}"
                    android:textColor="@color/text"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="@{notice.userAttendance == VoteStatus.NONE ? View.GONE : View.VISIBLE}">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@{notice.userAttendance == VoteStatus.ATTEND ? @drawable/notice_attendance_button_background : @drawable/notice_attendance_button_ripple}"
                    android:clickable="@{notice.userAttendance != VoteStatus.ATTEND}"
                    android:onClick="@{() -> viewmodel.onClickAttendanceButton(notice.pk, VoteStatus.ATTEND)}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableEnd="@{notice.userAttendance == VoteStatus.ATTEND ? @drawable/icon_check : null}"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:text="@{@string/notice_tv_vote_attendance(notice.voteAttendanceCount)}"
                        android:textSize="@dimen/text_small"
                        app:voteTextColor="@{notice.userAttendance == VoteStatus.ATTEND}" />
                </FrameLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@{notice.userAttendance == VoteStatus.ABSENT ? @drawable/notice_attendance_button_background : @drawable/notice_attendance_button_ripple}"
                    android:clickable="@{notice.userAttendance != VoteStatus.ABSENT}"
                    android:onClick="@{() -> viewmodel.onClickAttendanceButton(notice.pk, VoteStatus.ABSENT)}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableEnd="@{notice.userAttendance == VoteStatus.ABSENT ? @drawable/icon_check : null}"
                        android:drawablePadding="6dp"
                        android:gravity="center"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:text="@{@string/notice_tv_vote_absent(notice.voteAbsentCount)}"
                        android:textSize="@dimen/text_small"
                        app:voteTextColor="@{notice.userAttendance == VoteStatus.ABSENT}" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
